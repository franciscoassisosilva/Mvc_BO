@model BLL.Aluno

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Procurar</title>
</head>
<body>
    <div>
        <h4>Resultado da Busca de Aluno</h4>
    	<hr />
        @if (Model != null) { 
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Idade)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Idade)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.DataInscricao)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.DataInscricao)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Sexo)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Sexo)
            </dd>
            
            @if (string.IsNullOrEmpty(@Model.Foto))
            {
                <dt>
                    Foto
                </dt>
                <dd>
                    <img src="@Url.Content(Model.Foto)" alt="@Model.Texto" />
                    @Html.DisplayFor(model => model.Texto)
                </dd>
            }
        </dl>
        }
        else
        {
            <p>Nenhum aluno encontrado!</p>
        }
    </div>
    <p>        
        @Html.ActionLink("Retornar", "Index")
    </p>
</body>
</html>
