@model BLL.Aluno

<table border="1" style="font-family:Arial;border-collapse:collapse;">
    <tr>
        @if (!string.IsNullOrEmpty(Model.Foto))
        {
            <td>
                <img src="@Url.Content(Model.Foto)" alt="@Model.Texto" width="100" height="100" />
            </td>
        }
        else
        {
            <td>
                <img src='@Url.Content("~/Foto/usuario.png")' alt="Imagem do usuario" width="100" height="100" />
            </td>
        }
        <td>
            <table>
                <tr>
                    <td><b>Nome:</b></td>
                    <td>
                        @Model.Nome
                    </td>
                </tr>

                <tr>
                    <td><b>Idade:</b></td>
                    <td>
                        @Model.Idade
                    </td>
                </tr>

                <tr>
                    <td><b>Data Inscrição:</b></td>
                    <td>
                        @Model.DataInscricao.ToString("dd/MM/yyyy")
                    </td>
                </tr>

            </table>
        </td>
    </tr>
</table>